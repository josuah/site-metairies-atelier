#!/bin/sh -e

cd "$1"

exec find . -name 'index.txt' -exec sh -c '
	txt=$0 html=${0%.txt}.html
	i=0; while read line; do i=$((i+1))
		case $line in
		(/i/*) echo "<a href=\"#$i\" id=\"$i\" class="img"><img src=\"$line\"/></a>" ;;
		(/t/*) cat "..$line" ;;
		(*) echo "$line" ;;
		esac
	done <$txt | cat ../t/head.html t/head.html - ../t/foot.html >$html
' {} \;
